= form_for @good do |f|
  - if @good.errors.any?
    #error_explanation
      %h2= "#{pluralize(@good.errors.count, "error")} prohibited this good from being saved:"
      %ul
        - @good.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :note
    = f.text_area :note

  .actions
    = f.submit 'Save'
